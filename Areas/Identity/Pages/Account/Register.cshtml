@page
@model RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Office.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f4f6f9; /* Soft background */
        }

        .register-page {
            background: #f4f4f4;
        }

        .register-box {
            width: 800px; /* Increased width to accommodate two columns */
            margin: 5% auto;
        }

        .card {
            padding: 20px;
            border-radius: 10px;
        }

        .register-logo {
            font-size: 2.5rem;
            color: #007bff;
            text-align: center;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #0056b3; /* Darker on hover */
            }

        .text-danger {
            color: #dc3545; /* Bootstrap's danger color for validation messages */
        }

        .form-column {
            padding: 0 15px;
        }
    </style>
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <h3 class="register-logo"><b>Register</b></h3>
        <div class="card">
            <div class="card-body register-card-body">
                <h2 class="login-box-msg">@ViewData["Title"]</h2>
                <hr />

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <!-- First Column -->
                        <div class="col-md-6 form-column">
                            <div class="input-group mb-3 form-floating">
                                <input asp-for="Input.FirstName" class="form-control" autocomplete="name" required />
                                <label asp-for="Input.FirstName"></label>
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="input-group mb-3 form-floating">
                                <input asp-for="Input.LastName" class="form-control" autocomplete="surname" required />
                                <label asp-for="Input.LastName"></label>
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                            <div class="input-group mb-3 form-floating">
                                <input asp-for="Input.Address" class="form-control" autocomplete="address" required />
                                <label asp-for="Input.Address"></label>
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Second Column -->
                        <div class="col-md-6 form-column">
                            <div class="input-group mb-3 form-floating">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" required />
                                <label asp-for="Input.Email"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="input-group mb-3 form-floating">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" required />
                                <label asp-for="Input.Password"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="input-group mb-3 form-floating">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" required />
                                <label asp-for="Input.ConfirmPassword"></label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Full width elements -->
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group mb-3">
                                <label>User Role:</label>
                                <div>
                                    <input type="radio" asp-for="Input.UserRole" value="User" id="UserRoleUser" />
                                    <label for="UserRoleUser">User</label>
                                </div>
                                <div>
                                    <input type="radio" asp-for="Input.UserRole" value="Admin" id="UserRoleAdmin" />
                                    <label for="UserRoleAdmin">Admin</label>
                                </div>
                                <span asp-validation-for="Input.UserRole" class="text-danger"></span>
                            </div>
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>