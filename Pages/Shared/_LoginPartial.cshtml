@using Microsoft.AspNetCore.Identity
@using OfficeManagement.Areas.Identity.Data

@inject SignInManager<OfficeUser> SignInManager
@inject UserManager<OfficeUser> UserManager

<div class="d-flex justify-content-center justify-content-lg-start mt-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <span class="text-primary fw-bold me-3">Hello, @UserManager.GetUserName(User)!</span>
        <form id="logoutForm" class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-outline-danger me-2">Logout</button>
        </form>
    }
    else
    {
        <a class="btn btn-outline-success me-2" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="btn btn-outline-secondary me-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        <a class="btn btn-outline-primary"href="/DemoLogin">
            <span>Demo Login</span>
        </a>
    }
</div>