@page
@model OfficeManagement.Pages.StaffMembers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <!-- Content Header  -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Staff Members</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Index">Home</a></li>
                        <li class="breadcrumb-item active">Staff</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <p>
        <a asp-page="./Create">Add New Member</a>
    </p>

    <section class="content">
      
        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-header">
                <h3 class="card-title">Staff Members</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-sm btn-secondary">
                                <i class="fas fa-search"></i>Find
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body pb-0">
                <div class="row">
                    @foreach (var staffMember in Model.Staff)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                            <div class="card bg-light d-flex flex-fill">
                                <div class="card-header text-muted border-bottom-0">
                                    @Html.DisplayFor(model => staffMember.Title)
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-7">
                                            <h2 class="lead">
                                                <b>
                                                    @Html.DisplayFor(model => staffMember.Surname) , @Html.DisplayFor(model => staffMember.Name) 
                                                </b>
                                            </h2>
                                            <p class="text-muted text-sm"><b>@Html.DisplayNameFor(model => staffMember.Gender) : </b> @Html.DisplayFor(model => staffMember.Gender)</p>
                                            <p class="text-muted text-sm">
                                                <b>@Html.DisplayNameFor(model => staffMember.Department)</b> : @Html.DisplayFor(model => staffMember.Department)
                                            </p>
                                            <p class="text-muted text-sm">
                                                <b>@Html.DisplayNameFor(model => staffMember.PhoneNumber)</b> : @Html.DisplayFor(model => staffMember.PhoneNumber)
                                            <p>
                                            <p class="text-muted text-sm">
                                                <b>@Html.DisplayNameFor(model => staffMember.EmailAddress)</b> : @Html.DisplayFor(model => staffMember.EmailAddress)
                                            </p>
                                            <p class="text-muted text-sm">
                                                <b>@Html.DisplayNameFor(model => staffMember.DateOfBirth)</b> : @Html.DisplayFor(model => staffMember.DateOfBirth)
                                            </p>
                                            <p class="text-muted text-sm">
                                                <b>@Html.DisplayNameFor(model => staffMember.Address)</b> : @Html.DisplayFor(model => staffMember.Address)
                                            </p>
                                            <p class="text-muted text-sm">
                                                <b>@Html.DisplayNameFor(model => staffMember.DateJoined)</b> : @Html.DisplayFor(model => staffMember.DateJoined)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        <a asp-page="./Edit" asp-route-id="@staffMember.ID" class="btn btn-sm btn-primary">Edit</a>
                                        <a asp-page="./Details" asp-route-id="@staffMember.ID" class="btn btn-sm btn-secondary">Details</a>
                                        <a asp-page="./Delete" asp-route-id="@staffMember.ID" class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>   
            </div>
        </div>
    </section>
</div>


 
    


