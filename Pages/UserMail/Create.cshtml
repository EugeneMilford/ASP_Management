@page
@model OfficeManagement.Pages.UserMail.CreateModel
@{
    ViewData["Title"] = "New Mail";
}

<div class="container">
    <h2>New Mail</h2>
    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="Input.UserId"></label>
                    <select asp-for="Input.UserId" asp-items="Model.UserList" class="form-select">
                        <option value="">Select recipient...</option>
                    </select>
                    <span asp-validation-for="Input.UserId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.MailTopic"></label>
                    <input asp-for="Input.MailTopic" class="form-control" />
                    <span asp-validation-for="Input.MailTopic" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.MailContent"></label>
                    <textarea asp-for="Input.MailContent" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="Input.MailContent" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Send</button>
                    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
