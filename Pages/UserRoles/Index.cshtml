@page
@model OfficeManagement.Pages.UserRoles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <!-- Content Header -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>User Roles</h1>
                </div>
                <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/Index">Home</a></li>
              <li class="breadcrumb-item active">Roles</li>
            </ol>
                </div>
            </div>
        </div>
     </section>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role[0].UserRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Role) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RoleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RoleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.RoleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

</div>
