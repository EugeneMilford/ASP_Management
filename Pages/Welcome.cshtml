@page
@model OfficeManagement.Pages.WelcomeModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Welcome to Office Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/Office.css" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            text-align: center;
        }

        .hero-heading {
            text-align: center;
        }
    </style>
</head>
<body>
    <section id="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 d-flex flex-column justify-content-center">
                    <h1 class="hero-heading">Welcome to Office Management</h1>
                    <h2 class="hero-subheading">Streamline your projects, tasks, and team collaboration in one place.</h2>
                    <div class="centered-container">
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                    <form method="post" asp-page-handler="DemoLogin" class="d-inline">
                        <button type="submit" name="role" value="DemoUser" class="btn btn-outline-primary">Demo User</button>
                        <button type="submit" name="role" value="DemoAdmin" class="btn btn-outline-warning">Demo Admin</button>
                    </form>
                </div>
                <div class="col-lg-6 hero-img">
                    <img src="~/img/hero-img.png" class="img-fluid" alt="Hero Image">
                </div>
            </div>
        </div>
    </section>
</body>
</html>
