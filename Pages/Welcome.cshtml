@page
@model OfficeManagement.Pages.WelcomeModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Welcome to Office Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/Office.css" />
    <style>
        body {
            background-color: #e9ecef; /* Softer light background */
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            color: #212529; /* Default font color */
        }

        #hero {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            background: linear-gradient(145deg, #ffffff, #e8f0fe);
            box-shadow: 5px 5px 15px #c7c9cc, -5px -5px 15px #ffffff; /* Soft shadow effect */
        }

        .hero-heading {
            font-size: 3rem;
            font-weight: 700;
            color: #343a40;
            margin-bottom: 10px;
        }

        .hero-subheading {
            font-size: 1.8rem;
            font-weight: 300;
            margin-top: 10px;
            color: #495057;
        }

        .btn-get-started {
            background-color: #007bff; /* Primary color */
            transition: background-color 0.3s;
        }

            .btn-get-started:hover {
                background-color: #0056b3; /* Darker on hover */
            }

        .btn-demo {
            background-color: #6c757d; /* Secondary color */
            transition: background-color 0.3s;
            border: none;
        }

            .btn-demo:hover {
                background-color: #5a6268; /* Darker on hover */
            }

        .hero-img img {
            max-width: 100%;
            border-radius: 15px; /* Rounded image corners */
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .d-flex {
            margin-top: 20px; /* Spacing between buttons */
        }

        .login-partial {
            color: green;
            margin-top: 30px; /* Spacing above login partial */
            font-weight: bold;
        }
    </style>
</head>
<body>
    <section id="hero">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 d-flex flex-column justify-content-center">
                    <h1 class="hero-heading" data-aos="fade-up">Welcome to Office Management</h1>
                    <h2 class="hero-subheading" data-aos="fade-up" data-aos-delay="400">A team of talented individuals ready to assist you</h2>
                    <div class="centered-container">
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                    
                </div>
                <div class="col-lg-6 hero-img" data-aos="zoom-out" data-aos-delay="200">
                    <img src="~/img/hero-img.png" class="img-fluid" alt="Hero Image">
                </div>
            </div>
        </div>
    </section>
</body>
</html>