@page
@model OfficeManagement.Pages.OfficeBugTracking.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <!-- Content Header -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Add Bug Report</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Index">Home</a></li>
                        <li class="breadcrumb-item active">Add Bug Report</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <hr />
    <!-- Main Content -->
    <section class="content">
        <form method="post">
            <div class="row">
                <!-- Left Column -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">General Information</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-bs-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="bugTracking.Title" class="control-label"></label>
                                <input asp-for="bugTracking.Title" class="form-control" placeholder="Enter bug title" />
                                <span asp-validation-for="bugTracking.Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="bugTracking.Project" class="control-label"></label>
                                <input asp-for="bugTracking.Project" class="form-control" placeholder="Project name" />
                                <span asp-validation-for="bugTracking.Project" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="bugTracking.Priority" class="control-label"></label>
                                <select asp-for="bugTracking.Priority" class="form-control">
                                    <option value="">Select priority</option>
                                    <option value="Low">Low</option>
                                    <option value="Medium">Medium</option>
                                    <option value="High">High</option>
                                    <option value="Critical">Critical</option>
                                </select>
                                <span asp-validation-for="bugTracking.Priority" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="bugTracking.Status" class="control-label"></label>
                                <select asp-for="bugTracking.Status" class="form-control">
                                    <option value="">Select status</option>
                                    <option value="New">New</option>
                                    <option value="In Progress">In Progress</option>
                                    <option value="Resolved">Resolved</option>
                                    <option value="Closed">Closed</option>
                                </select>
                                <span asp-validation-for="bugTracking.Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Details</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-bs-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="bugTracking.Description" class="control-label"></label>
                                <textarea asp-for="bugTracking.Description" class="form-control" rows="4" placeholder="Detailed bug description"></textarea>
                                <span asp-validation-for="bugTracking.Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="bugTracking.CreatedDate" class="control-label"></label>
                                <input asp-for="bugTracking.CreatedDate" type="date" class="form-control" />
                                <span asp-validation-for="bugTracking.CreatedDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="bugTracking.Submitter" class="control-label"></label>
                                <input asp-for="bugTracking.Submitter" class="form-control" placeholder="Your name" />
                                <span asp-validation-for="bugTracking.Submitter" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="form-group float-right">
                        <input type="submit" value="Create Report" class="btn btn-primary mr-2" />
                        <a asp-page="Index" class="btn btn-outline-secondary mr-2">Back to List</a>
                        <button type="reset" class="btn btn-outline-danger">Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

