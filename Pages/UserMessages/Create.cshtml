@page
@model OfficeManagement.Pages.UserMessages.CreateModel

@{
    ViewData["Title"] = "Send Message";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Send New Message</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <label for="Input.ToUserId">Recipient:</label>
                                <select asp-for="Input.ToUserId" asp-items="Model.UserList" class="form-control">
                                    <option value="">Select a recipient...</option>
                                </select>
                                <span asp-validation-for="Input.ToUserId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Content">Message:</label>
                                <textarea asp-for="Input.Content" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="Input.Content" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Send Message</button>
                            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

