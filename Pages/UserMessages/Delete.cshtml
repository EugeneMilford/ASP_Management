@page
@model OfficeManagement.Pages.UserMessages.DeleteModel
@{
    ViewData["Title"] = "Delete Message";
}

<h1>Delete Message</h1>

<h3>Are you sure you want to delete this message?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">To</dt>
        <dd class="col-sm-10">@Model.Message.ToUserId</dd>
        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.Message.Content</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Message.SentDate.ToString("g")</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Message.MessageId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
