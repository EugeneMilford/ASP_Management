@page
@model OfficeManagement.Pages.UserMessages.IndexModel

@{
    ViewData["Title"] = "Message Inbox";
}

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<section class="content">
    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col-12">
                <a asp-page="Create" class="btn btn-primary">Send New Message</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @if (!Model.Messages.Any())
                {
                    <div class="alert alert-info">
                        No messages in your inbox.
                    </div>
                }
                else
                {
                    <div class="timeline">
                        @foreach (var message in Model.Messages)
                        {
                            <div class="timeline-item">
                                <span class="time">
                                    <i class="fas fa-clock"></i> @message.SentDate.ToString("MM/dd/yyyy HH:mm")
                                </span>
                                <h3 class="timeline-header">
                                    <strong>From:</strong> @message.FromUser.FirstName @message.FromUser.LastName
                                    (@message.FromUser.Email)
                                </h3>
                                <div class="timeline-body">
                                    @message.Content
                                </div>
                                <div class="timeline-footer">
                                    <form method="post" class="d-inline">
                                        <input type="hidden" name="messageId" value="@message.MessageId" />
                                        <button type="submit" class="btn btn-danger btn-sm" asp-page-handler="Delete"
                                                onclick="return confirm('Are you sure you want to delete this message?');">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}
